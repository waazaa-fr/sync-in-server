    "@nestjs/platform-socket.io": "^11.0.15",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/websockets": "^11.0.15",
    "@socket.io/cluster-adapter": "^0.2.2",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.0",
    "canvas": "^3.1.0",
    "class-transformer": "^0.5.1",
